<div class="container base">
    <div class="row">
        <div class="col">
            <p id="usuario" class="text-end">Hola {{usuario}} <a href="" class="btn btn-danger">Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
        </div>
    </div>
    <div class="row" id="cab">
        <div class="col-7">
            <p>Canciones de la temporada</p>
        </div>
        <div class="col-5"  id="nuevo">
            <a href="/admin/panel/agregar" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nuevo</a>
            <a href="/musica" class="btn btn-info" target="_blank"><i class="far fa-eye"></i></a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-title">
                        <th scope="col">Artista</th>
                        <th scope="col">Álbum</th>
                        <th scope="col">Canción</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-content">
                    {{#each panel}}
                    <tr>
                        <td>{{artista}}</td>
                        <td>{{album}}</td>
                        <td>{{cancion}}</td>
                        <td class="text-end">
                            <a href="/admin/panel/modificar/{{id}}" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/panel/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>